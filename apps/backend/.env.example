# Environment Variables for Backend

# MongoDB Configuration (Local Docker)
MONGODB_URI=YOUR_MONGODB_URI

# JWT Secret for authentication
JWT_SECRET=YOUR_JWT_SECRET_FOR_BACKEND

# Server Configuration
PORT=3003
NODE_ENV=development

# Google OAuth Configuration (for backend)
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# Admin Email for Google Sign-In (for backend admin access)
ADMIN_EMAIL=YOUR_ADMIN_EMAIL

# Production URL (if applicable)
PROD_URL=YOUR_PRODUCTION_BACKEND_URL
